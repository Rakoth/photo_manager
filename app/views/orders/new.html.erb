<% title t('.title') %>
<%= error_messages_for :order %>
<% form_for @order do |form| %>
	<div style="float:left;">
		<% form.fields_for :contact do |contact| %>
			<%= render :partial => 'contacts/contact', :locals => {:form => contact} %>
		<% end %>
	</div>
	<div>
		<p>
			<%= form.label :place %><br />
			<%= form.text_area :place, :cols => 40, :rows => 4 %>
		</p>
		<p>
			<%= form.label :description %><br />
			<%= form.text_area :description, :cols => 40, :rows => 4 %>
		</p>
	</div>
	<div class="clear"></div>
	<p>
		<%= form.label :start_at %><br />
		<%= form.datetime_select :start_at, :start_year => Time.now.year, :default => 1.week.from_now %>
	</p>
	<%= form.submit t(:submit) %>
<% end %>