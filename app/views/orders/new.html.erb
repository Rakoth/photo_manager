<% title t('.title') %>
<% form_for @order do |form| %>
	<%= form.error_messages %>
	<div style="float:left;">
		<p>
			<%= form.label :name %><br />
			<%= form.text_field :name %>
		</p>
		<p>
			<%= form.label :email %><br />
			<%= form.text_field :email %>
		</p>
		<p>
			<%= form.label :phone %><br />
			<%= form.text_field :phone %>
		</p>
		<p>
			<%= form.label :icq %><br />
			<%= form.text_field :icq %>
		</p>
	</div>
	<div>
		<p>
			<%= form.label :place %><br />
			<%= form.text_area :place, :cols => 40, :rows => 4 %>
		</p>
		<p>
			<%= form.label :description %><br />
			<%= form.text_area :description, :cols => 40, :rows => 4 %>
		</p>
	</div>
	<div class="clear"></div>
	<p>
		<%= form.label :start_at %><br />
		<%= form.datetime_select :start_at, :start_year => Time.now.year, :default => 1.week.from_now %>
	</p>
	<%= form.submit t(:submit) %>
<% end %>