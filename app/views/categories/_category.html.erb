<div class="category">
	<%= link_to image_tag(category.title_image.url(:normal), :alt => category.title), category %>

	<% category.photos.each do |p| %>
		<%= link_to photo_image(p, :small), p %>
	<% end %>
	<% if admin? %>
		<div>
			<%= link_to 'Edit', edit_category_path(category) %>
			<%= link_to 'Delete', category_path(category), :method => :delete, :confirm => 'Are you sure?' %>
		</div>
	<% end %>
</div>